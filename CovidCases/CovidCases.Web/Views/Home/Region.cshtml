@model CovidCases.Web.Models.HomeViewModel
@{
    ViewData["Title"] = "Region Cases";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="m-t-lg">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <h5>Top 10 Covid Cases in @Model.Info.FirstOrDefault().Region.Name</h5>
                                <div class="ibox-tools">
                                    <form name="form1" asp-antiforgery="true" class="m-t" role="form" asp-action="" method="post" runat="server">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-6">&nbsp;</div>
                                                <div class="col-sm-2">
                                                    <button class="btn btn-primary btn-block" type="submit" value="Csv" formaction="@Url.Action("Csv")">Csv</button>
                                                </div>
                                                <div class="col-sm-2">
                                                    <button class="btn btn-primary btn-block" type="submit" value="Xml" formaction="@Url.Action("Xml")">Xml</button>
                                                </div>
                                                <div class="col-sm-2">
                                                    <button class="btn btn-primary btn-block" type="submit" value="Json" formaction="@Url.Action("Json")">Json</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="ibox-content">

                                <div class="table-responsive">
                                    <table class="table table-striped table-bordered table-hover dataTable">
                                        <thead>
                                            <tr>
                                                <th>Province</th>
                                                <th>Cases</th>
                                                <th>Deaths</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                                @foreach (var item in Model.Info)
                                                {
                                                    <tr>
                                                        <td>@item.Region.Province</td>
                                                        <td>@item.Confirmed</td>
                                                        <td>@item.Deaths</td>
                                                    </tr>
                                                }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>